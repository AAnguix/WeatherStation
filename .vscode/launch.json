    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Sensor API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\sensor",
            "program": "${workspaceFolder}\\sensor\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            "program": "${workspaceFolder}\\server\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sensor collector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            "program": "${workspaceFolder}\\server\\sensor-collector.js"
        }
    ]
}